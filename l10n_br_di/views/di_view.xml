<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="di_search" model="ir.ui.view">
        <field name="name">l10n_br_di.di.search</field>
        <field name="model">l10n_br_di.di</field>
        <field name="arch" type="xml">
            <search string="Import Customs Declaration">
                <field name="name" />
            </search>
        </field>
    </record>

    <record id="di_tree" model="ir.ui.view">
        <field name="name">l10n_br_di.di.tree</field>
        <field name="model">l10n_br_di.di</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date_register"/>
                <field name="partner_id"/>
                <field name="customs_state_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="di_form" model="ir.ui.view">
        <field name="name">l10n_br_di.di.form</field>
        <field name="model">l10n_br_di.di</field>
        <field name="arch" type="xml">
            <form string="Import Customs Declaration">
                <header>
                    <button name="action_confirm" type="object" string="Confirm" states="draft" />
                    <button name="action_done" type="object" string="Done" states="confirmed" />
                    <button name="action_cancel" type="object" string="Cancel" states="confirmed" confirm="Are you sure you want to cancel this import customs declaration?" />
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,done"/>
                </header>
                <sheet>
                    <group name="general_infos" string="General Information">
                        <field name="name" />
                        <field name="date_register" />
                        <field name="date_customs" />
                        <field name="customs_state_id" />
                        <field name="customs_location" />
                    </group>
                    <group name="partners" string="Partners">
                        <group name="supplier" string="Supplier">
                            <field name="partner_id" widget="res_partner_many2one" domain="[('supplier','=',True)]" context="{'search_default_supplier':1, 'show_address': 1, 'show_vat': True}" options="{&quot;always_reload&quot;: True}" />
                        </group>
                        <group name="acquirer" string="Acquirer">
                          <field name="partner_importer_id" />
                          <field name="partner_acquirer_id" />
                          <field name="partner_procurator_id" />
                          <field name="company_id" />
                        </group>
                    </group>
                    <field name="currency_ids">
                        <tree>
                            <field name="currency_id" />
                            <field name="currency_rate_id" invisible="1" />
                            <field name="currency_date" />
                            <field name="currency_rate" />
                        </tree>
                    </field>
                    <field name="line_ids" context="{'form_view_ref': 'l10n_br_di.line_form', 'default_di_id': id, 'default_company_id': company_id, 'default_partner_id': partner_id, 'no_subcall': True}">
                        <tree>
                            <field name="line_number" />
                            <field name="name" />
                        </tree>
                    </field>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

