<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="item_form" model="ir.ui.view">
        <field name="name">l10n_br_di.item.form</field>
        <field name="model">l10n_br_di.item</field>
        <field name="inherit_id" ref="l10n_br_di.item_form" />
        <field name="arch" type="xml">
            <group name="product" position="before">
                <group name="purchase_receipts" string="Purchase Receipts Information" attrs="{'invisible': [('line_origin', '!=', 'purchase_receipts')]}">
                    <field name="purchase_line_ids" />
                </group>
            </group>
        </field>
    </record>

</odoo>
