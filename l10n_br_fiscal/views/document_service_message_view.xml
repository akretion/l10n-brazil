<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="document_service_message_search" model="ir.ui.view">
        <field name="name">l10n_br_fiscal.document.service.message.search</field>
        <field name="model">l10n_br_fiscal.document.service.message</field>
        <field name="arch" type="xml">
            <search string="Fiscal Document Service Message">
                <field name="code" />
                <field name="document_type_id" />
            </search>
        </field>
    </record>

    <record id="document_service_message_tree" model="ir.ui.view">
        <field name="name">l10n_br_fiscal.document.service.message.tree</field>
        <field name="model">l10n_br_fiscal.document.service.message</field>
        <field name="arch" type="xml">
            <tree edit="false" create="false">
                <field name="code" />
                <field name="name" />
                <field name="document_type_id" />
            </tree>
        </field>
    </record>

    <record id="document_service_message_form" model="ir.ui.view">
        <field name="name">l10n_br_fiscal.document.service.message.form</field>
        <field name="model">l10n_br_fiscal.document.service.message</field>
        <field name="arch" type="xml">
            <form string="Fiscal Document Service Message" edit="false" create="false">
                <sheet>
                    <group>
                        <field name="code" />
                        <field name="name" />
                        <field name="document_type_id" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
