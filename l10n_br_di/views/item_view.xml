    <record id="item_form" model="ir.ui.view">
        <field name="name">l10n_br_di.item.form</field>
        <field name="model">l10n_br_di.item</field>
        <field name="arch" type="xml">
            <form string="Import Customs Declaration Item">
                <sheet>
                    <group name="fiscal_fields" invisible="1">
                        <!-- <field name="currency_id" invisible="1" /> -->
                        <field name="fiscal_operation_type" invisible="1" />
                        <field name="company_id" invisible="1" />
                        <field name="tax_framework" invisible="1" />
                        <field name="fiscal_genre_id" invisible="1" />
                        <field name="fiscal_genre_code" invisible="1" />
                        <field name="fiscal_type" invisible="1" />
                    </group>
                    <field name="line_id" invisible="1" />
                    <group name="origin" string="Product Origin">
                        <field name="line_origin" />
                        <field name="item_sequence" />
                    </group>
                    <group name="product" string="Product Information">
                        <field name="product_id" attrs="{'readonly': [('line_origin', '!=', 'product')]}" />
                        <field name="name" attrs="{'readonly': [('line_origin', '!=', 'product')]}" />
                    </group>
                    <group name="product_details">
                        <group name="commercial_infors" string="Commercial">
                            <label for="quantity" />
                            <div class="o_row">
                              <field name="quantity" class="oe_inline" />
                              <field name="uom_id" groups="uom.group_uom" class="oe_inline" />
                            </div>
                            <field name="price_unit" />
                            <field name="discount_value" />
                            <field name="insurance_value" />
                            <field name="other_value" />
                            <field name="freight_value" />
                        </group>
                        <group name="fiscal_infors" string="Fiscal">
                            <label for="fiscal_quantity" />
                            <div class="o_row">
                                <field name="fiscal_quantity" class="oe_inline" />
                                <field name="uot_id" groups="uom.group_uom" class="oe_inline" />
                            </div>
                            <field name="fiscal_price" />
                            <field name="ncm_id" />
                            <field name="fiscal_genre_id" />
                            <field name="nbm_id" />
                            <field name="cest_id" />
                            <field name="nbs_id" />
                        </group>
                        <group name="l10n_br_fiscal" string="Operation">
                            <field name="fiscal_operation_type" invisible="1" readonly="1" />
                            <field name="fiscal_operation_id" required="1" />
                            <field name="fiscal_operation_line_id" required="1" />
                            <field name="cfop_id" attrs="{'invisible': [('fiscal_type', '=', '00'), ('cfop_id', '=', False)]}" />
                        </group>
                    </group>
                    <notebook>
                        <page name="fiscal_taxes" string="Taxes" />
                        <page name="fiscal_line_extra_info" string="Extra Info" />
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
