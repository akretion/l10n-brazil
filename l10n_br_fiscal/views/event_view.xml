<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="event_search" model="ir.ui.view">
        <field name="name">l10n_br_fiscal.event.search</field>
        <field name="model">l10n_br_fiscal.event</field>
        <field name="arch" type="xml">
            <search string="Fiscal Event">
                <field name="origin" />
            </search>
        </field>
    </record>

    <record id="event_tree" model="ir.ui.view">
        <field name="name">l10n_br_fiscal.event.tree</field>
        <field name="model">l10n_br_fiscal.event</field>
        <field name="arch" type="xml">
            <tree edit="false" create="false">
                <field name="document_event_id" />
                <field name="create_date" />
                <field name="origin" />
                <field name="protocol_date" />
                <field name="status_code" />
                <field name="message" />
                <field name="company_id" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <record id="event_form" model="ir.ui.view">
        <field name="name">l10n_br_fiscal.event.form</field>
        <field name="model">l10n_br_fiscal.event</field>
        <field name="arch" type="xml">
            <form string="Fiscal Event" edit="false" create="false">
                <header>
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <group>
                        <field name="document_event_id" />
                        <field name="company_id" />
                        <field name="document_id" />
                        <field name="document_type_id" />
                        <field name="invalidate_number_id" />
                        <field name="document_serie_id" />
                        <field name="sequence" />
                        <field name="partner_id" />
                        <field name="protocol_number" />
                        <field name="protocol_date" />
                        <field name="write_date" />
                        <field name="justification" />
                        <!-- TODO DELETE <field name="status_code" />
                        <field name="message" /> -->
                        <field name="event_transmission_ids" >
                            <tree>
                                <field name="create_date" />
                                <field name="message_request_id" />
                                <field name="message_response_id" />
                                <field name="state" />
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
