<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="l10n_br_base_res_config_settings_form" model="ir.ui.view">
      <field name="name">res.config.settings.form</field>
      <field name="model">res.config.settings</field>
      <field name="priority">20</field>
      <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
      <field name="arch" type="xml">
        <xpath expr="//div[@id='l10n_br_sped']" position="after">
          <div id="l10n_br_sped_account" groups="l10n_br_sped.group_manager">
              <field name="company_id" invisible="1"/>
              <h2>SPED Account</h2>
              <div class="row mt16 o_settings_container">
                <div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible': [('has_accounting_entries','!=',False)]}">
                <div class="o_setting_left_pane"/>
                <div class="o_setting_right_pane">
                  <span class="o_form_label">SPED Chart of Account</span>
                  <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." aria-label="Values set here are company-specific." groups="base.group_multi_company" role="img"/>
                  <div class="text-muted">
                      SPED chart of accounts &amp; legal statements for your country
                  </div>
                  <div class="content-group">
                    <div class="row mt16">
                      <label for="sped_chart_template_id" string="SPED Chart Template" class="col-lg-3 o_light_label"/>
                      <field name="sped_chart_template_id" widget="selection"/>
                    </div>
                  </div>
              </div>
            </div>
          </div>
        </div>
      </xpath>
      </field>
    </record>

</odoo>
