<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">

    <record id="module_category_l10n_br_fiscal_fci" model="ir.module.category">
        <field name="name">Fiscal FCI</field>
        <field name="description">Extends Odoo to helps you manage your brazilian fiscal FCI...</field>
        <field name="sequence">30</field>
    </record>

    <record id="group_manager" model="res.groups">
        <field name="name">Manager FCI</field>
        <field name="category_id" ref="module_category_l10n_br_fiscal_fci"/>
    </record>

    <record id="base.user_admin" model="res.users">
        <field name="groups_id" eval="[(4, ref('l10n_br_fiscal_fci.group_manager'))]"/>
    </record>

    <record id="l10n_br_fiscal_fci_rule" model="ir.rule">
        <field name="name">Fiscal FCI multi-company</field>
        <field name="model_id" ref="model_l10n_br_fiscal_fci"/>
        <field eval="True" name="global"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
    </record>

    <record id="l10n_br_fiscal_fci_line_rule" model="ir.rule">
        <field name="name">Fiscal FCI Line multi-company</field>
        <field name="model_id" ref="model_l10n_br_fiscal_fci_line"/>
        <field eval="True" name="global"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
    </record>

</odoo>
