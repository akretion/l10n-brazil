<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="module_sped_account" model="ir.module.category">
    <field name="name">SPED Account</field>
    <field name="description">Brazilian SPED core module</field>
    <field name="sequence">5</field>
  </record>

  <record id="group_user" model="res.groups">
    <field name="name">SPED Account User</field>
    <field name="category_id" ref="l10n_br_sped_account.module_sped_account"/>
    <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
  </record>

  <record id="group_manager" model="res.groups">
    <field name="name">SPED Account Manager</field>
    <field name="category_id" ref="l10n_br_sped_account.module_sped_account"/>
    <field name="implied_ids" eval="[(4, ref('l10n_br_sped_account.group_user'))]"/>
    <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
  </record>

</odoo>
