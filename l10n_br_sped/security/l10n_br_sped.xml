<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="module_sped" model="ir.module.category">
    <field name="name">SPED</field>
    <field name="description">Brazilian SPED core module</field>
    <field name="sequence">5</field>
  </record>

  <record id="group_user" model="res.groups">
    <field name="name">SPED User</field>
    <field name="category_id" ref="l10n_br_sped.module_sped"/>
    <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
  </record>

  <record id="group_manager" model="res.groups">
    <field name="name">SPED Manager</field>
    <field name="category_id" ref="l10n_br_sped.module_sped"/>
    <field name="implied_ids" eval="[(4, ref('l10n_br_sped.group_user'))]"/>
    <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
  </record>

</odoo>
