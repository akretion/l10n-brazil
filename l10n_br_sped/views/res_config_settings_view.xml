<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="l10n_br_sped_res_config_settings_form" model="ir.ui.view">
      <field name="name">l10n_br_sped.res.config.settings.view.form</field>
      <field name="model">res.config.settings</field>
      <field name="priority" eval="10"/>
      <field name="inherit_id" ref="base.res_config_settings_view_form"/>
      <field name="arch" type="xml">
          <xpath expr="//div[hasclass('settings')]" position="inside">
              <div id="l10n_br_sped" class="app_settings_block" data-string="l10n_br_sped" string="SPED" data-key="l10n_br_sped" groups="l10n_br_sped.group_manager">
                <h2>SPED</h2>
                <div class="row mt16 o_settings_container">
                  <div class="col-12 col-lg-6 o_setting_box">
                      <div class="o_setting_left_pane">
                        <field name="module_l10n_br_sped_account"/>
                      </div>
                      <div class="o_setting_right_pane" id="module_l10n_br_sped_account">
                        <label for="module_l10n_br_sped_account"/>
                        <div class="text-muted">
                          Install SPED Account module
                        </div>
                      </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                          <field name="module_l10n_br_sped_fiscal"/>
                        </div>
                        <div class="o_setting_right_pane" id="module_l10n_br_sped_fiscal">
                          <label for="module_l10n_br_sped_fiscal"/>
                          <div class="text-muted">
                            Install SPED Fiscal module
                          </div>
                        </div>
                      </div>
                  </div>
              </div>
          </xpath>
      </field>
  </record>

</odoo>
