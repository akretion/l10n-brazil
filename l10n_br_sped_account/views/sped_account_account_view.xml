<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sped_account_account_search" model="ir.ui.view">
        <field name="name">l10n_br_sped_account.account.search</field>
        <field name="model">l10n_br_sped_account.account</field>
        <field name="arch" type="xml">
            <search string="SPED Account">
                <field name="code"/>
                <field name="name"/>
                <field name="account_type"/>
            </search>
        </field>
    </record>

    <record id="sped_account_account_tree" model="ir.ui.view">
        <field name="name">l10n_br_sped_account.account.tree</field>
        <field name="model">l10n_br_sped_account.account</field>
        <field name="arch" type="xml">
            <tree string="SPED Account">
                <field name="code"/>
                <field name="name"/>
                <field name="account_type"/>
                <field name="sped_type"/>
                <field name="level"/>
                <field name="sped_table"/>
            </tree>
        </field>
    </record>

    <record id="sped_account_account_form" model="ir.ui.view">
        <field name="name">l10n_br_sped_account.account.form</field>
        <field name="model">l10n_br_sped_account.account</field>
        <field name="arch" type="xml">
            <form string="SPED Account">
                <sheet>
                    <group>
                        <field name="code"/>
                        <field name="name"/>
                        <field name="account_type"/>
                        <field name="sped_type"/>
                        <field name="level"/>
                        <field name="sped_table"/>
                        <field name="parent_id"/>
                        <field name="note"/>
                        <field name="account_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
